<div class="col-md-12">
  <div class="group">
    <%= link_to("新建测试结果", new_admin_test_report_path, class: "btn btn-default btn-sm pull-right"  ) %>
  </div>

  <!-- <h2><%= t("admin.report_list") %></h2> -->
  <!-- 或者可以写成下面形式 -->
  <h2><%= t("report_list", :scope => "admin") %></h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>测试名称</th>
        <th>测试结果</th>
        <th>测试版本</th>
        <th>测试范围</th>
      </tr>
    </thead>
    <tbody>
      <% @test_reports.each do |report| %>
        <tr>
          <td>#</td>
          <td><%= link_to(report.name, admin_test_report_path(report)) %></td>
          <td><%= report.result %></td>
          <td><%= report.version %></td>
          <td><%= report.content %></td>
          <td>
            <%= link_to("edit", edit_admin_test_report_path(report), class: "btn btn-sm btn-default") %>
            <%= link_to("delete", admin_test_report_path(report),    class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?" }) %>
          </td>
        </tr>
        <%= link_to("excel", import_excel_admin_test_reports_path, class: "btn btn-default btn-sm"  ) %>

      <% end %>
    </tbody>
  </table>
</div>
